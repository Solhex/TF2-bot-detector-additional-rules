{
	"$schema": "https://raw.githubusercontent.com/PazerOP/tf2_bot_detector/master/schemas/v3/rules.schema.json",
	"file_info": {
		"authors": [
			"Solhex"
		],
		"description": "Solhex's rules list for TF2 Bot Detector, most of the code used here is from Link2006's and moebkun's rule list (please use theirs as I guarantee its way better) which are marked with their username.",
		"title": "Modified rules list",
		"update_url": "https://raw.githubusercontent.com/Solhex/TF2-bot-detector-additional-rules/main/rules.solhex.json"
	},
	"rules": [
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "snooker",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": "b2824852210eab28c9c6307111f4b0fcff80c07f"
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"matchroom.live/snooker"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "braaaap",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": "3e28feb1e131d1724f94cbf486edd721ccd459a0"
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "regex",
					"patterns": [
						"braaaap \\d+",
						"spoooky braaaap \\d+"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "crusader",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": "b957a547cca39078dbab8d6ed3b5171af25ecaff"
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"GYPSY CRUSADER"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater",
					"racist"
				]
			},
			"description": "NK",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": "a03023b2361fb9aa7a94cf515425236255844c75"
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"[VALVE]Niggerkiller",
						"[VALVE]\u5350Niggerkiller\u534d",
						"[VALVE]\u5350Nigg0rkiller\u534d"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[Link2006] NameSteal2",
			"triggers": {
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"\u205f",
						"\u200f",
						"\u200e",
						"\u200d",
						"\u200c",
						"\u200b",
						"\u2060",
						"\u202c",
						"\u202d",
						"\u2061",
						"\ufeff",
						"\u0e4a"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[Link2006] Broken Namesteal bots",
			"triggers": {
				"username_text_match": {
					"case_sensitive": true,
					"mode": "contains",
					"patterns": [
						"\\ u202C"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater",
					"racist"
				]
			},
			"description": "[Link2006] NK",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": "c35571183a64018d1eff01be6867cde37c2d5909"
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "regex",
					"patterns": [
						"\\x4E\\x69\\x67\\x67\\x65\\x72killer",
						"TF2 PLAYER = APE",
						"\/id\/heinrichderpro"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"racist"
				]
			},
			"description": "[Moeb]Racistism detected",
			"triggers": {
				"chatmsg_text_match": {
					"case_sensitive": false,
					"mode": "regex",
					"patterns": [
						"\\w*N󠀡󠀡IGGE󠀡󠀡R\\w*",
						"\\w*ɴɪɢɢᴇʀ\\w*",
						"\\w*nіggеr\\w*",
						"\\w*NÍGGER\\w*",
						"\\w*n\\\\|gger\\w*",
						"\\w*niggеr\\w*",
						"\\w*N1GG3R\\w*",
						"\\w*nigger\\w*",
						"\\w*nigg4\\w*",
						"\\w*niggz\\w*",
						"niggers"
					]
				},
				"mode": "match_any"
			}
		}
	]
}